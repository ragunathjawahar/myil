<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="CircularProgressBar">
        <attr name="barColor" format="color|reference" />
        <attr name="barBackgroundColor" format="color|reference" />
        <attr name="android:textColor" />
        <attr name="barStrokeFraction" format="float|reference" />
        <attr name="barBackgroundStrokeFraction" format="float|reference" />
        <attr name="progress" format="float|reference" />
        <attr name="max" format="float|reference" />
        <attr name="showText" format="boolean|reference"/>

        <attr name="edges" format="enum">
            <enum name="flat" value="0"/>
            <enum name="rounded" value="1"/>
        </attr>

        <attr name="displayTextAs" format="enum">
            <enum name="percent" value="0"/>
            <enum name="progress" value="1"/>
        </attr>

        <attr name="numberFormat" format="enum">
            <enum name="integer" value="0"/>
            <enum name="decimal" value="1"/>
        </attr>
    </declare-styleable>

</resources>
