<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="CircularProgressBar">
        <attr name="barColor" format="color|reference" />
        <attr name="barBackgroundColor" format="color|reference" />
        <attr name="android:textColor" />
        <attr name="barStrokeFraction" format="float|reference" />
        <attr name="barBackgroundStrokeFraction" format="float|reference" />
        <attr name="value" format="float|reference" />
        <attr name="max" format="integer|reference" />
        <attr name="edges" format="enum">
            <enum name="flat" value="0"/>
            <enum name="rounded" value="1"/>
        </attr>
    </declare-styleable>

</resources>
